record(stringout, "$(P)PathPvFileName") {}

record(luascript, "$(P)PlayPathFromPvFile") {
    field(INAA, "$(P)PathPvFileName")
    field(CODE, "@waypoints.lua play_path_pv_file({prefix='$(P)$(R)'})")
    field(PREC, 0)
    field(SYNC, "Async")
}



