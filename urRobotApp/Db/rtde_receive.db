record(bi, "$(P)isConnected")
{
    field(DESC, "Connection status")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1))IS_CONNECTED")
    field(SCAN, "I/O Intr")
}

