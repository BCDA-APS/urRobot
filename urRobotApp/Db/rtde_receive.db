{
    field(DESC, "Time since controller started")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1))CONTROLLER_TIMESTAMP")
    field(SCAN, "I/O Intr")
}

